<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="act" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:colorPrimary">@color/statusBarcolor</item>
        <item name="android:colorPrimaryDark">@color/statusBarcolorDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
    <style name="actNNS" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:colorPrimary">@color/statusBarcolor</item>
        <item name="android:colorPrimaryDark">@color/statusBarcolorDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
    <style name="actNS" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:colorPrimary">@color/statusBarcolor</item>
        <item name="android:colorPrimaryDark">@color/statusBarcolorDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
    <style name="transparentact" parent="act">
      <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="transparentactNNS" parent="actNNS">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="transparentactNS" parent="actNS">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>