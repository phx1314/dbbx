<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTextView_time"
        style="@style/text_style_11_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jx"
        android:paddingBottom="@dimen/j10dp"
        android:paddingLeft="@dimen/j10dp"
        android:paddingRight="@dimen/j10dp"
        android:text="10月20号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/j8dp">

        <com.mdx.framework.widget.MImageView
            android:id="@+id/mMImageView"
            android:layout_width="@dimen/j85dp"
            android:layout_height="@dimen/j85dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/j8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTextView_title"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="瑞泰退台重疾险" />

                <TextView
                    android:id="@+id/mTextView_xh"
                    style="@style/text_style_11_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="780人喜欢" />
            </LinearLayout>

            <TextView
                android:id="@+id/mTextView_age"
                style="@style/text_style_11_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j2dp"
                android:text="保障年龄：30天-70周岁" />

            <TextView
                android:id="@+id/mTextView_qx"
                style="@style/text_style_11_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j2dp"
                android:text="保障期限：终身" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/mTextView_price"
                    style="@style/text_style_15_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="205"
                    android:textColor="@color/A"
                    android:textStyle="bold" />

                <TextView
                    style="@style/text_style_11_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="元/年起" />

                <TextView   android:id="@+id/mTextView_db"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_grey"
                    android:gravity="center"
                    android:paddingLeft="@dimen/j13dp"
                    android:paddingRight="@dimen/j13dp"
                    android:text="+  对比"
                    android:textColor="@color/A" />

                <TextView
                    android:id="@+id/mTextView_sc"
                    style="@style/text_style_13_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:background="@drawable/bt_grey"
                    android:drawableLeft="@drawable/bt_shoucang_n"
                    android:drawablePadding="@dimen/j5dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/j12dp"
                    android:paddingRight="@dimen/j12dp"
                    android:text="收藏"
                    android:textColor="@color/A" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/mImageView_k"
        android:layout_width="match_parent"
        android:layout_height="@dimen/j8dp"
        android:background="@color/jx" />
</LinearLayout>

