<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j90dp">

        <LinearLayout
            android:layout_width="@dimen/j70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/mToggleButton"
                style="@style/MyToggleButton"
                android:layout_width="@dimen/j50dp"
                android:layout_height="@dimen/j25dp"
                android:layout_marginLeft="@dimen/j5dp"
                android:background="#00000000"
                android:checked="false"
                android:textOff=""
                android:textOn="" />

            <TextView
                style="@style/text_style_13_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j8dp"
                android:text="隐藏相同" />
        </LinearLayout>

        <com.ndtlg.dbbx.view.AnimateScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="none"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/mLinearLayout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" />


        </com.ndtlg.dbbx.view.AnimateScrollView>
    </LinearLayout>

    <TextView
        style="@style/text_style_15_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/j8dp"
        android:text="基础参数" />
</LinearLayout>

