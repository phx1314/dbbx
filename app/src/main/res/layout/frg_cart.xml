<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip">

        <TextView
            style="@style/text_style_17_black"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="对比" />
        <TextView
            android:id="@+id/mTextView_edit"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/j10dp"
            android:text="编辑" />
    </RelativeLayout>

    <com.ab.view.pullview.AbPullListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/j45dp"
        android:background="@color/jx"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp">

        <CheckBox
            android:id="@+id/mCheckBox"
            android:layout_width="@dimen/j20dp"
            android:layout_height="@dimen/j20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/checked"
            android:button="@null"
            android:checked="false"
            android:gravity="center" />

        <TextView
            style="@style/text_style_15_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j8dp"
            android:layout_weight="1"
            android:text="全选 " />
        <TextView
            android:id="@+id/mTextView_delete"
            android:visibility="gone"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/A"
            android:gravity="center"
            android:paddingLeft="@dimen/j30dp"
            android:paddingRight="@dimen/j30dp"
            android:text="删除" />
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/mTextView_db"
            style="@style/text_style_15_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/A"
            android:gravity="center"
            android:paddingLeft="@dimen/j20dp"
            android:paddingRight="@dimen/j20dp"
            android:text="开始对比" />
    </LinearLayout>
</LinearLayout>

